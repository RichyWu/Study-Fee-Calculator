/* 模态框 */    
    
/* modal-mask是日历框的黑色背景，透明度0.5，全屏*/
.modal-mask {    
  width: 100%;    
  height: 100%;    
  position: fixed;    
  top: 0;    
  left: 0;    
  background: #000;    
  opacity: 0.5;    
  overflow: hidden;    
  z-index: 8000;    
}    
.calendar-frame {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: scroll;
}   

/*modal-diaglog是结束日期日历框本身*/
.modal-dialog {    
  width: 85%;
  height: 500rpx;
  padding: 10rpx 30rpx 30rpx 30rpx;    
  overflow: scroll;    
  position: relative; 
  /*top: 20%;    
  left: 0;    
  right: 0; */  
  margin: 0 auto;    
  z-index: 9900;    
  background: rgba(255, 255, 255, 1);    
  border-radius: 5rpx;    
}

/*modal-start-diaglog是开始日期日历框本身*/
.modal-start-dialog {    
  width: 85%;
  height: 500rpx;
  padding: 10rpx 30rpx 30rpx 30rpx;    
  position: absolute; 
  top: 20%;    
  left: 0;    
  right: 0; 
  margin: 0 auto;    
  z-index: 9900;    
  background: rgba(255, 255, 255, 1);    
  border-radius: 5rpx;    
}

